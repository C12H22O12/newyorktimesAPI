{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path */
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@constant/*": ["src/constant/*"],
      "@action/*": ["src/actions/*"],
      "@present/*": ["src/present/*"],
      "@common/*": ["src/present/common/*"],
      "@component/*": ["src/present/component/*"],
      "@layout/*": ["src/present/layout/*"],
      "@pages/*": ["src/present/pages/*"],
      "@store/*": ["src/store/*"],
      "@types/*": ["src/types/*"]
    },

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
